{
    "files": [
        "app/main.ts"
    ],
    "quiet": false,
    "debug": true,
    "fullscreen": true,
    "extensions": [
        ".js",
        ".ts",
        ".py",
        ".json"
    ],
    "interval": 500,
    "watch": [
        "app/"
    ],
    "deno_args":[
        "--allow-net",
        "--allow-env",
        "--allow-write",
        "--allow-read",
        "--allow-plugin",
        "--unstable"
    ],
    "execute": {
        ".js": ["deno", "run"],
        ".ts": ["deno", "run"],
        ".py": ["python"]
    },
    "fmt": false,
    "test": false
}